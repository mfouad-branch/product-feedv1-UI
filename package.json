{
  "name": "product_feed_link_creator",
  "version": "1.1.0",
  "main": "main.js",
  "scripts": {
    "start": "cake build && electron ."
  },
  "dependencies": {
    "cake": "^0.1.1"
   },
  "build": {
    "productName": "Link Creator",
    "appId": "com.branch.link_creator",
    "directories": {
      "output": "build"
    },
    "files": [
    	"**/*"
     ],
    "extraFiles": [
      {
        "from": "vendor/bin/osx",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "vendor/icons/logo_icon.icns"
    },
    "win": {
      "icon": "vendor/icons/logo_icon.ico"
    },
    "linux": {
      "icon": "build/icons"
    }
  }
}
